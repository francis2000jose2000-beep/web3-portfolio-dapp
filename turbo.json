{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "ALCHEMY_API_KEY",
        "MONGODB_URI",
        "PINATA_API_KEY",
        "PINATA_SECRET_KEY"
      ]
    },
    "lint": {}
  }
}
